<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherited" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherited</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invite_users']" position="inside">
            	<div class="row mt16 o_settings_container">
            		<div class="col-12 col-lg-6 o_setting_box">
                    	<div class="o_setting_right_pane">
							<span class="o_form_label">
								<label for="expire_in_days"/>
							</span>
							<div class="text-muted">
								Please enter at value in days.
							</div>
							<div class="content-group">
								<div class="mt16 ml4 row">
									<field
										name ="expire_in_days"
										class="oe_inline"
									/>
								</div>
							</div>
						</div>
					</div>
				</div>
            </xpath>
        </field>
    </record>
</odoo>